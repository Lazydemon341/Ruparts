<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background = "@drawable/border_child_layout">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:drawableStart="@null"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Приемка груза от поставщика 3412"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <LinearLayout
        android:id="@+id/layout_date"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_title">

        <TextView
            android:id="@+id/item_date"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="10 мар 23"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/item_note"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/item_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:maxLength="130"
        android:maxLines="3"
        android:paddingHorizontal="10dp"
        android:text="Клиент: ООО Улитка"
        android:textSize="15sp"
        android:background = "@drawable/border_layout_description" />


</LinearLayout>