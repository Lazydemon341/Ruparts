<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_bs">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/bottom_sheet_implementers_drag_handle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bottom_sheet_implementers_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/bottom_sheet_implementers_drag_handle_view"
        android:gravity="center_vertical"
        android:paddingLeft="35dp"
        android:text="Выберите исполнителя:"
        android:textSize="16dp"
        android:textStyle="bold">

    </TextView>

<!--    <ListView-->
<!--        android:id="@+id/bottom_sheet_implementers_list"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/bottom_sheet_implementers_header"-->
<!--        android:layout_marginStart="20dp" />-->

    <TextView
        android:id="@+id/implementer1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/bottom_sheet_implementers_drag_handle_view"
        android:gravity="center_vertical"
        android:paddingLeft="35dp"
        android:text="Администратор"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/implementer2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/bottom_sheet_implementers_drag_handle_view"
        android:gravity="center_vertical"
        android:paddingLeft="35dp"
        android:text="Кладовщик"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/implementer3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/bottom_sheet_implementers_drag_handle_view"
        android:gravity="center_vertical"
        android:paddingLeft="35dp"
        android:text="Работник склада"
        android:textSize="16dp"
        android:textStyle="bold"/>

</LinearLayout>