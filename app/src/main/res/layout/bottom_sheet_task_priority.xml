<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_bs_priority">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/bottom_sheet_priority_drag_handle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bottom_sheet_priority_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingLeft="35dp"
        android:text="Выберите приоритет:"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/high_priority"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingLeft="35dp"
        android:text="Высокий"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/medium_priority"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingLeft="35dp"
        android:text="Средний"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/low_priority"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingLeft="35dp"
        android:text="Низкий"
        android:textSize="16dp"
        android:textStyle="bold"/>

</LinearLayout>