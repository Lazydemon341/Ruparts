<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/product_unit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_product_unit1"
        android:padding="16dp">

        <TextView
            android:id="@+id/article_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Артикул"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/article_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="12345678901234567890123456"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Бренд"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/article_name" />

        <TextView
            android:id="@+id/brand_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="GENERAL MOTORS"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/article_value" />

        <TextView
            android:id="@+id/description_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Описание"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/brand_name" />

        <TextView
            android:id="@+id/description_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Замок зажигания очень длинное описание очень длинное описание очень длинное описание "
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/brand_value" />

        <TextView
            android:id="@+id/address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Адрес"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/address_value" />

        <TextView
            android:id="@+id/address_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="L2-A01-11-16-12"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/description_value" />

        <TextView
            android:id="@+id/barcode_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Штрихкод"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_name" />

        <TextView
            android:id="@+id/barcode_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="A20250521T214852JL"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/address_value" />

        <TextView
            android:id="@+id/quantity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Кол-во"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barcode_name" />

        <TextView
            android:id="@+id/quantity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="12345"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/barcode_value" />

        <TextView
            android:id="@+id/date_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Приход"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quantity_name" />

        <TextView
            android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="2 января 2024 г. (132 дня)"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/quantity_value" />

        <TextView
            android:id="@+id/comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Комментарий"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_name" />

        <TextView
            android:id="@+id/comment_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Короткий комментарий к товарной единице"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comment_name" />

        <ImageButton
            android:id="@+id/photo1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comment_value" />

        <ImageButton
            android:id="@+id/photo2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            app:layout_constraintLeft_toRightOf="@id/photo1"
            app:layout_constraintTop_toBottomOf="@id/comment_value" />

        <ImageButton
            android:id="@+id/photo3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            app:layout_constraintLeft_toRightOf="@id/photo2"
            app:layout_constraintTop_toBottomOf="@id/comment_value" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="96dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_product_unit2"
        android:padding="16dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Признаки"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/mark1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/filter_chip"
            android:drawableStart="@drawable/ruler_black"
            android:drawablePadding="5dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="4sp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:paddingVertical="6dp"
            android:text="Признак"
            android:textColor="#49454F"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/marks" />

        <TextView
            android:id="@+id/mark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/filter_chip"
            android:drawableStart="@drawable/build_black"
            android:drawablePadding="5dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="4sp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:paddingVertical="6dp"
            android:text="Признак"
            android:textColor="#49454F"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/mark1"
            app:layout_constraintTop_toBottomOf="@id/marks" />

        <TextView
            android:id="@+id/mark3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/filter_chip"
            android:drawableStart="@drawable/recycling_black"
            android:drawablePadding="5dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="4sp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:paddingVertical="6dp"
            android:text="Признак"
            android:textColor="#49454F"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mark1" />

        <TextView
            android:id="@+id/mark4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/filter_chip"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="4sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="Признак"
            android:textColor="#49454F"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/mark3"
            app:layout_constraintTop_toBottomOf="@id/mark2" />

        <TextView
            android:id="@+id/mark5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/filter_chip"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="4sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="Признак"
            android:textColor="#49454F"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mark3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/frame_product_unit3"
        android:padding="16dp">

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Информация"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/weight_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Вес"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info" />

        <TextView
            android:id="@+id/weight_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="12 кг"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/guideline_info"
            app:layout_constraintTop_toBottomOf="@id/info" />

        <TextView
            android:id="@+id/length_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Длина"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weight_name" />

        <TextView
            android:id="@+id/length_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="120 мм"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/guideline_info"
            app:layout_constraintTop_toBottomOf="@id/weight_value" />

        <TextView
            android:id="@+id/width_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Ширина"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/length_name" />

        <TextView
            android:id="@+id/width_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="3000 мм"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/guideline_info"
            app:layout_constraintTop_toBottomOf="@id/length_value" />

        <TextView
            android:id="@+id/height_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Высота"
            android:textColor="#625B71"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/width_name" />

        <TextView
            android:id="@+id/height_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="28 мм"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/guideline_info"
            app:layout_constraintTop_toBottomOf="@id/width_value" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="96dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/frame_product_unit5"
        android:layout_marginTop="12dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/comment_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Комментарий"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_info_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Короткий комментарий к карточке товара"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_product_unit4"
        android:layout_marginTop="12dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/defect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Дефект"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/defect_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text="Корпус немного треснул"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/defect"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageButton
            android:id="@+id/photo4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/defect_info" />

        <ImageButton
            android:id="@+id/photo5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            app:layout_constraintLeft_toRightOf="@id/photo4"
            app:layout_constraintTop_toBottomOf="@id/defect_info" />

        <ImageButton
            android:id="@+id/photo6"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            app:layout_constraintLeft_toRightOf="@id/photo5"
            app:layout_constraintTop_toBottomOf="@id/defect_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

</ScrollView>