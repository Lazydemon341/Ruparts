<resources>
    <!-- Base application theme. -->
    <style name="Theme.Ruparts" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color (buttons) -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorPrimaryContainer">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryVariant">@color/blue_900</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/blue_700</item>
        
        <!-- Other Material3 colors -->
        <item name="colorTertiary">@color/blue_500</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/blue_700</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorOutline">@color/blue_500</item>
    </style>
</resources>