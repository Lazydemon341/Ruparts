<resources>
    <!-- Base application theme. -->
    <style name="Theme.Ruparts" parent="Theme.Material3.Light.NoActionBar">

        <!--  Text colors -->
        <item name="android:textColorSecondary">@color/secondary60</item>
        <item name="android:textColorPrimary">@color/onSurface</item>
        <item name="colorSecondary">@color/secondary</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <item name="colorSecondaryContainer">@color/secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/onSecondaryContainer</item>

        <item name="colorSurfaceContainer">@color/surfaceContainer</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorOnSurfaceVariant">@color/onSurfaceVariant</item>

        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>

        <!--  Status bar color -->
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Text appearance styles -->
    <style name="TextAppearance.Ruparts.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.97sp</item>
        <item name="android:textColor">?colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.Ruparts.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-1.11sp</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

</resources>